@page "{articleId:int}"
@model EditModel
@{
    ViewData["Title"] = "Edit";
}

@section Scripts{
    @await Html.PartialAsync("_ValidationScriptsPartial")
    <environment include="Development">
        <script src="~/lib/tinymce/tinymce.js"></script>
    </environment>
    <environment include="Production">
        <script src="~/lib/tinymce/tinymce.min.js"></script>
    </environment>
    <script src="~/js/loadEditor.js"></script>
}

<form method="post" class="col-lg-8">
    <input type="hidden" name="categoryId" value="@Html.DisplayFor(t => Model.Category.Id)" />
    <div asp-validation-summary="All" class="text-danger"></div>
    @if (ViewData["Success"]!=null&&(bool)ViewData["Success"])
    {
        <div class="text-success">修改成功</div>
    }
    <div class="form-group row">
        <label for="title" asp-for="Input.Title" class="col-sm-2 col-form-label">标题</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" asp-for="Input.Title" />
        </div>
        <span asp-validation-for="Input.Title" class="text-danger"></span>
    </div>
    <div>
        <textarea asp-for="Input.Content"></textarea>
    </div>
    <div class="d-flex">
        <div>当前目录：@*编程>C#>Asp.net*@@Html.DisplayFor(t => Model.Category.Name)</div>
        <button class="ml-auto btn btn-secondary">提交</button>
    </div>
</form>


