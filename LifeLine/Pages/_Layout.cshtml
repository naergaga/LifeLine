<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LifeLine</title>

    <environment include="Development">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
        <link href="~/lib/font-awesome/css/font-awesome.css" rel="stylesheet" />
    </environment>
    <environment include="Production">
        <link href="~/dist/vendor.css" rel="stylesheet" asp-append-version="true" />
    </environment>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    @RenderSection("Styles", required: false)
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-3">
                <div class="main-nav">
                    <nav class="navbar navbar-expand-md navbar-light">
                        <a href="#" class="navbar-brand">日迹</a>
                        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarContent">
                            <span class="navbar-toggler-icon"></span>
                        </button>

                        <div class="navbar-collapse collapse" id="navbarContent">
                            <ul class="navbar-nav mr-auto">
                                <li class="nav-item"><a class="nav-link" asp-page="/Index"><i class="fa fa-home fa-fw"></i>主页</a></li>
                                <li class="nav-item"><a class="nav-link" asp-controller="Music"><i class="fa fa-music fa-fw"></i>音乐</a></li>
                                <li class="nav-item"><a class="nav-link" asp-controller="Article"><i class="fa fa-pencil fa-fw"></i>记录</a></li>
                            </ul>
                            @await Html.PartialAsync("_LoginPartial")
                        </div>
                    </nav>
                </div>
            </div>
            <div class="col-md-9 body-content">
                @RenderBody()
                <hr />
                <footer>
                    <p>&copy; 2017 - LifeLine</p>
                </footer>
            </div>
        </div>
    </div>
    @{
        var useVendorScript = ViewData["UseVendorScript"] as bool?;
    }
    @if (useVendorScript == null)
    {
        <environment include="Development">
            <script src="~/lib/jquery/dist/jquery.js"></script>
            <script src="~/lib/popper.js/dist/popper.js" asp-append-version="true"></script>
            <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
        </environment>
        <environment include="Production">
            <script src="~/lib/jquery/dist/jquery.js"></script>
            <script src="~/lib/popper.js/dist/popper.js" asp-append-version="true"></script>
            <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
        </environment>
    }
    else if (useVendorScript == true)
    {
        <script src="~/dist/vendor.js" asp-append-version="true"></script>
        <script src="~/dist/site.bundle.js" asp-append-version="true"></script>
    }
    @RenderSection("Scripts", required: false)
</body>
</html>
